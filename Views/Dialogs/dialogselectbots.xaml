<Page
	x:Class="OpenBullet.DialogSelectBots"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OpenBullet"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="DialogSelectBots"
	Loaded="Page_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<DockPanel
			Grid.Row="0">
			<Label
				Content="Bots:" />
			<TextBox
				x:Name="botsNumberTextbox"
				MaxLength="3"
				Text="1"
				KeyDown="botsNumberTextbox_KeyDown"
				PreviewTextInput="botsNumberTextbox_PreviewTextInput" />
		</DockPanel>
		<Button
			x:Name="selectButton"
			Grid.Row="1"
			Margin="0,5,0,0"
			Content="Select"
			Click="selectButton_Click" />
	</Grid>
</Page>
